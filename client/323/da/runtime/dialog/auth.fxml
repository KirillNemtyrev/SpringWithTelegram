<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>

<Pane fx:id="layout" prefHeight="600.0" prefWidth="800.0" stylesheets="@styles/auth/auth.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171">
   <children>
      <Pane fx:id="dim" prefHeight="600.0" prefWidth="800.0" />
      <Pane fx:id="header" prefHeight="53.0" prefWidth="800.0">
         <children>
            <Button fx:id="close" layoutX="778.0" layoutY="2.0" mnemonicParsing="false" prefHeight="16.0" prefWidth="16.0">
               <styleClass>
                  <String fx:value="HideButton" />
                  <String fx:value="CloseButtonIMG" />
               </styleClass>
            </Button>
            <Button fx:id="hide" layoutX="755.0" layoutY="2.0" mnemonicParsing="false" prefHeight="16.0" prefWidth="16.0">
               <styleClass>
                  <String fx:value="HideButton" />
                  <String fx:value="HideButtonIMG" />
               </styleClass>
            </Button>
            <Button fx:id="settings" layoutX="731.0" layoutY="2.0" mnemonicParsing="false">
               <styleClass>
                  <String fx:value="HideButton" />
                  <String fx:value="SettingsButtonIMG" />
               </styleClass>
            </Button>
         </children>
      </Pane>
      <Pane fx:id="authPane" layoutX="428.0" layoutY="217.0" prefHeight="340.0" prefWidth="318.0">
         <children>
            <TextField fx:id="login" layoutX="39.0" layoutY="14.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="40.0" prefWidth="240.0" promptText="Логин">
               <styleClass>
                  <String fx:value="TextField" />
                  <String fx:value="LoginField" />
               </styleClass>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </TextField>
            <PasswordField fx:id="password" layoutX="39.0" layoutY="72.0" prefHeight="40.0" prefWidth="240.0" promptText="Пароль">
               <styleClass>
                  <String fx:value="TextField" />
                  <String fx:value="PasswordFeild" />
               </styleClass>
            </PasswordField>
            <CheckBox fx:id="savePassword" layoutX="39.0" layoutY="133.0" mnemonicParsing="false" prefHeight="24.0" prefWidth="199.0" styleClass="CheckBox" text="  Сохранить пароль" />
            <Button fx:id="goAuth" layoutX="39.0" layoutY="178.0" mnemonicParsing="false" prefHeight="32.0" prefWidth="240.0" styleClass="PlayButton" text="Войти" />
            <Hyperlink fx:id="goReg" layoutX="60.0" layoutY="226.0" prefHeight="17.0" prefWidth="199.0" styleClass="HyperLink" text="Регистрация" />
            <Hyperlink fx:id="goResetPasswd" layoutX="60.0" layoutY="261.0" prefHeight="29.0" prefWidth="199.0" styleClass="HyperLink" text="Забыли пароль?" />
         </children>
      </Pane>
   </children>
</Pane>
